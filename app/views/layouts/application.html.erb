<!DOCTYPE html>
<html>
  <head>
    <title>Vagabond</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Nobile|Rock+Salt" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Gloria+Hallelujah" rel="stylesheet">
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </head>

  <body>
      <nav class="navbar navbar-default">
        <div>
          <div class="navbar-header">
          <!-- collapse navbar -->
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar" aria-expanded="false">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span> 
            </button>
          <!-- collapse navbar -->
            <%= link_to "Vagabond", root_path, :class =>"navbar-brand",:id=>"header" %>
          </div>
          <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav navbar-right">
              <%if current_user %>
                <li><%= link_to "Log Out", logout_path, :id=> "links" %></li>
                <li><%= link_to "Profile", user_path(current_user), :id=> "links"%></li>
              <%else%>
                <li><%= link_to "Sign Up", new_user_path, :id=> "links" %></li>
                <li><%= link_to "Log In", login_path, :id=> "links" %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

      <% flash.each do |name, msg| %>
        <%= name.capitalize %>: <%= msg %>
      <% end %>

    <%= yield %>

  </body>
</html>
