<%= image_tag @city.image, class: "img-responsive show-city"%>

<h2 id="cidade"><%= @city.name %></h2>
<h2 class="text-center"><%= link_to "Add A New Comment", new_comment_path(@city), class: "Addcomment"%></h2>
  <br>
<% @comments.each do |comment| %>
  <div class="thumbnail row">
    <figure class="figure col-md-2">
      <%= image_tag comment.user.image, class: "profile rounded figure-img img-fluid"%>
      <figcaption class="caption comment figure-caption"><%= comment.user.name %></figcaption>
    </figure>
    <div class="col-md-9 col-md-offset-1">
      <h3><%= link_to comment.title, comment_path(comment), class: "comment text-center"%></h3>
      <hr>
      <p class="comment"><%= comment.text%></p>
      <p> <%= "Updated #{time_ago_in_words(comment.updated_at)} ago"%></p>
      <% if current_user && current_user == comment.user%>
        <%= link_to "Edit", edit_comment_path(comment), class: "editBtn btn btn-default"%>
        <%= link_to "Delete", comment_path(comment), method: 'delete', class: "btn btn-default deleteBtn", data: {:confirm => 'Are you sure you want to delete '+ comment.title + "?"} %>
      <%end%>
    </div>
  </div> 
<% end %>